#!/usr/bin/env bash
set -euo pipefail

if [[ "$(id -u)" -ne 0 ]]; then
  echo "ERROR: Run as root (sudo -i)."
  exit 1
fi

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
default_repo_dir="$(cd "${script_dir}/.." && pwd)"

prompt() {
  local label="$1"
  local default="$2"
  local value=""
  read -r -p "${label} [${default}]: " value
  if [[ -z "$value" ]]; then
    value="$default"
  fi
  printf '%s' "$value"
}

echo "TasmotaFleet setup inside Debian 13 LXC."
echo "Press Enter to accept defaults."
echo

REPO_DIR="$(prompt "Path to TasmotaFleet repo" "$default_repo_dir")"
SERVICE_USER="$(prompt "Service user" "tasmotafleet")"
VENV_DIR="$(prompt "Python venv path" "${REPO_DIR}/.venv")"
TEST_PORT="$(prompt "Test port" "5000")"
START_TEST_RAW="$(prompt "Start test run now? (y/n)" "y")"

START_TEST="$(printf '%s' "$START_TEST_RAW" | tr '[:upper:]' '[:lower:]')"

if [[ ! -d "$REPO_DIR" ]]; then
  echo "ERROR: Repo directory not found: $REPO_DIR"
  exit 1
fi

REPO_DIR="$(cd "$REPO_DIR" && pwd)"

if [[ ! -f "$REPO_DIR/src/app.py" ]]; then
  echo "ERROR: src/app.py not found in ${REPO_DIR}"
  exit 1
fi

REQ_FILE=""
if [[ -f "$REPO_DIR/requirements.txt" ]]; then
  REQ_FILE="$REPO_DIR/requirements.txt"
elif [[ -f "$REPO_DIR/src/requirements.txt" ]]; then
  REQ_FILE="$REPO_DIR/src/requirements.txt"
else
  echo "ERROR: requirements.txt not found."
  exit 1
fi

echo "Installing packages..."
DEBIAN_FRONTEND=noninteractive apt-get update
DEBIAN_FRONTEND=noninteractive apt-get -y -o Dpkg::Options::=--force-confdef -o Dpkg::Options::=--force-confold upgrade
DEBIAN_FRONTEND=noninteractive apt-get -y install git python3 python3-venv python3-pip build-essential

if ! id -u "$SERVICE_USER" >/dev/null 2>&1; then
  useradd -m -s /bin/bash "$SERVICE_USER"
fi

chown -R "${SERVICE_USER}:${SERVICE_USER}" "$REPO_DIR"

echo "Creating virtual environment..."
if [[ ! -d "$VENV_DIR" ]]; then
  runuser -u "$SERVICE_USER" -- python3 -m venv "$VENV_DIR"
fi

runuser -u "$SERVICE_USER" -- "$VENV_DIR/bin/python" -m pip install --upgrade pip
runuser -u "$SERVICE_USER" -- "$VENV_DIR/bin/python" -m pip install -r "$REQ_FILE"

echo
echo "Installation done."
echo "Test command:"
echo "  cd ${REPO_DIR} && ${VENV_DIR}/bin/flask --app src.app run --host 0.0.0.0 --port ${TEST_PORT}"
echo "Open: http://<container-ip>:${TEST_PORT}"
echo
echo "After a successful test, run:"
echo "  ${script_dir}/setupTasmotaFleetService"

if [[ "$START_TEST" == "y" ]]; then
  echo
  echo "Starting TasmotaFleet now. Stop with Ctrl+C when done testing."
  runuser -u "$SERVICE_USER" -- bash -lc "cd \"$REPO_DIR\" && \"$VENV_DIR/bin/flask\" --app src.app run --host 0.0.0.0 --port \"$TEST_PORT\""
fi
